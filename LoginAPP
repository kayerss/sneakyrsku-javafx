package app;

import javafx.application.Application;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.*;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;
import db.AkunDAO;

public class LoginAPP extends Application {
    @Override
    public void start(Stage stage) {
        TextField userF = new TextField(); userF.setPromptText("Username");
        PasswordField passF = new PasswordField(); passF.setPromptText("Password");
        Button btnL = new Button("Login");
        Button btnR = new Button("Register");
        Label lbl = new Label();

        btnL.setOnAction(e -> {
            if (AkunDAO.login(userF.getText(), passF.getText()) != -1) {
                new SneakyrskuFX().start(new Stage());
                stage.close();
            } else lbl.setText("Gagal Login!");
        });

        btnR.setOnAction(e -> {
            if (AkunDAO.register(userF.getText(), passF.getText())) lbl.setText("Berhasil!");
        });

        VBox root = new VBox(10, new Label("SNEAKYRSKU"), userF, passF, btnL, btnR, lbl);
        root.setAlignment(Pos.CENTER);
        stage.setScene(new Scene(root, 300, 300));
        stage.show();
    }
    public static void main(String[] args) { launch(args); }
}
